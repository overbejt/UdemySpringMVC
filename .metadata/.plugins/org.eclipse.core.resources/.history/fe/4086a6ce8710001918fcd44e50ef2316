package com.udemyLesson.jee;

/**
 * This is the class that will validate a user that is trying to log in.
 * @author joshoverbeck
 *
 */
public class LoginService {
	
	//Constructor
	public LoginService(){
		
	}
	
	public boolean isUserValid(String user, String password) {
		if(user.equals("josh") && password.equals("Awesome")) {
			return true;
		}else {
			return false;
		}
	}//End of the 'isUserValid' method

}//End of the 'UserValidationService' class
